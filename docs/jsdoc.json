{
    "plugins": [
        "plugins/markdown"
    ],
    "tags": {
        "allowUnknownTags": false
    },
    "opts": {
        "destination": "docs/api",
        "recurse": true
    },
    "source": {
        "include": [
            "packages/master/src/",
            "packages/master/master.js",
            "packages/slave/slave.js",
            "packages/ctl/clusterctl.js",
            "packages/lib/",
            "plugins/"
        ],
        "excludePattern": "node_modules"
    }
}
